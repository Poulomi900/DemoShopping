@model IEnumerable<MySecondApp.Models.ProductModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container d-flex flex-wrap">
    @foreach(var item in Model)
    {
        var s = item.Name;
        var firstWord = s.IndexOf(" ") > -1 ? s.Substring(0, s.IndexOf(" ")) : s;
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="https://loremflickr.com/g/150/150/@firstWord?lock=@item.Id" alt="@item.Name">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text">@Html.DisplayFor(m => @item.Price)</p>
                <p class="card-text">@item.Description</p>
                <a href="/Products/ShowDetails/@item.Id" class="btn btn-primary">Show Details</a>
                <a href="/Products/Edit/@item.Id" class="btn btn-primary">Edit</a>
                <a href="/Products/Delete/@item.Id" class="btn btn-primary">Delete</a>
            </div>
        </div>
    }
</div>
